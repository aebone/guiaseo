<% @contents.each do |content| %>

  <div class="page-header">
    <h1><%= content.name %></h1>
  </div>
  <div>
    <p><%= raw(content.text) %></p>
  </div>

    <% if signed_in? %>

      <%= link_to 'Show ', content %>|
      <%= link_to 'Edit ', edit_content_path(content) %>|
      <%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Certeza?' } %>

    <% end %>
    
    <br><br><br>
<% end %>